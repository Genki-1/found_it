<div class="conteiner">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<%= render 'category', categories: @category_list %>
			<div class="col-xs-9">
				<div class="row">
					<p>
						カテゴリー：<%= link_to @parent_category.name, category_all_index_recipe_path(@parent_category) %>
							 ＞ <%= link_to @category.name, category_index_recipe_path(@category) %></p>
					<table class="col-xs-12">
						<tbody>
						<tr>
							<td>
								<h2><%= @recipe.title %></h2>
							</td>
							<td>
								<% if @recipe.user == current_user %>
								<%= link_to "編集する", edit_recipe_path(@recipe),class: "btn btn-primary btn-sm" %>
								<% end %>
							</td>
							<td><%= @recipe.if_is_closed %></td>
							<td>
								<div id="favorite_buttons_<%= @recipe.id %>">
									<%= render partial: 'favorites/favorite_btn', locals: { recipe: @recipe} %>
								</div>
							</td>
						</tr>
						</tbody>
					</table>
				</div>
				<div class="col-xs-4">
					<%= attachment_image_tag @recipe, :image, :fill, 400, 300,format: "jpeg" , fallback: "no_image.jpg", size:'200x150' %>
				</div>
				<div class="col-xs-8">
					<h3><%= @recipe.outline %></h3>

					<h2>レシピ材料</h2>
					<table class="table">
						<% @materials.each do |material| %>
						<tbody>
							<tr>
								<td><%= attachment_image_tag material, :image, format: "jpeg" , fallback: "no_image.jpg", id: "material-image"  %></td>
								<td><%= material.name %></td>
								<td><%= material.quantity %></td>
								<td><%= material.maker %></td>
							</tr>
						</tbody>
						<% end %>
					</table>
				</div>
				<div class="row">
					<h2>レシピ手順</h2>
					<table class="table">
						<% @procedures.each.with_index(1) do |procedure, idx| %>
						<tbody>
							<tr>
								<td><%= idx %></td>
								<td><%= attachment_image_tag procedure, :image, format: "jpeg" , fallback: "no_image.jpg", id: "procedure-image" %></td>
								<td><%= procedure.explanation %></td>
							</tr>
						</tbody>
						<% end %>
					</table>
				</div>
				<div class="row">
					<div class="comment">
						<h2>コメント</h2>
						<div id="comments_area">
							<%= render partial:'comments/comment_index',locals: { comments: @comments, recipe: @recipe} %>
							<% if user_signed_in? %>
								<%= render partial: 'comments/form', locals: { comment: @comment, recipe: @recipe } %>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>