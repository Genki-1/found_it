<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <p id="notice"><%= notice %></p>
      <p class="devise-title-sm-login">会員の方はこちらからログイン</p>
        <div class="col-xs-8 col-xs-offset-2">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <table class="table devise-table">
              <tr>
                <th class="col-xs-3">ニックネーム</th>
                    <td>
                      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
                    </td>
              </tr>
              <tr>
                <th class="col-xs-3">パスワード</th>
                <td>
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
                </td>
              </tr>
              <tr>
                <th></th>
                <td class="pass_right">
                  <%= link_to "⇒パスワードを忘れた方はこちら", new_password_path(resource_name) , class: "link"%>
                </td>
              </tr>
              <tr>
                <td align="center" colspan="2">
                    <%= f.submit "　　　ログイン　　　" ,class: "btn btn-lg btn-brown" %>
                </td>
              </tr>
          </table>
        </div>
      </div>


  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
</div>