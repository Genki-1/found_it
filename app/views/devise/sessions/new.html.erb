<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <p class="devise-title">会員の方はこちらからログイン</p>
        <div class="col-xs-8 col-xs-offset-2">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group devise-form">
            <table class="table devise-table">
              <tr>
                <th class="col-xs-3">ニックネーム</th>
                    <td>
                      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
                    </td>
              </tr>
              <tr>
                <th class="col-xs-3">パスワード</th>
                <td>
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
                </td>
              </tr>
              <tr>
                <th></th>
                <td class="pass_right">
                  <%= link_to "⇒パスワードを忘れた方はこちら", new_password_path(resource_name) , class: "link"%>
                </td>
              </tr>
              <tr>
                <td align="center" colspan="2">
                    <%= f.submit "　　　ログイン　　　" ,class: "btn btn-lg btn-blue" %>
                </td>
              </tr>
          </table>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
        </div>
      </div>
      <% end %>
      <div class="row">
        <div class="col-xs-12">
          <p class="devise-title">会員登録はこちら</p>
          <div class="col-xs-10 col-xs-offset-1">
            <h4 align="center"><%= link_to 'こちら', new_user_registration_path , class: "link"%>から新規会員登録してください。</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>