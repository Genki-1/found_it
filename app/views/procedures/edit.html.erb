<div class="conteiner">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<h2>手順変更</h2>
			<%= form_for [@recipe, @procedure] do |f| %>
			<table class="table">
				<thead>
					<tr>
						<th class="col-xs-4">画像</th>
				        <th class="col-xs-7">手順説明</th>
				    </tr>
				</thead>
				<tbody>
				    <tr>
				    	<td><%= attachment_image_tag @procedure, :image, fallback: "no_image.jpg", size:'200x150', id: "file-preview" %>
						<%= f.attachment_field :image, class: "btn  item_attachment_field", id: "image_select"%>
						<label for="image_select" class="btn btn-primary item_attachment_field" style="display: block;">画像選択</label></td>
				        <td><%= f.text_area :explanation, rows:'5', class: 'form-control' %></td>
				    </tr>
				</tbody>
			</table>
            	<div><%= f.submit "手順を変更" ,class: "btn btn-primary btn-lg" %></div>
	        <% end %>
		</div>
	</div>
</div>
<!-- 画像選択した際に、選択した画像を表示させるjavascript -->
<script>
	document.getElementById('image_select').addEventListener('change', function (e) {
    // 1枚だけ表示する
    var file = e.target.files[0];

    // ファイルのブラウザ上でのURLを取得する
    var blobUrl = window.URL.createObjectURL(file);

    // img要素に表示
    var img = document.getElementById('file-preview');
    img.src = blobUrl;
});
</script>