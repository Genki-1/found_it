<div class="conteiner">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div class="row">
				<h2><%= @recipe.title %>
					<%= link_to "タイトル・概要を変更する", edit_recipe_path(@recipe),class: "btn btn-primary btn-sm" %>
				</h2>
				<div class="col-xs-4">
					<%= attachment_image_tag @recipe, :image, :fill, 300, 200,format: "jpeg" , fallback: "no_image.jpg", size:'300x200' %>
				</div>
				<div class="col-xs-8">
					<h3><%= @recipe.outline %></h3>

					<h2>レシピ材料　<%= link_to '材料の新規追加',new_recipe_material_path(@recipe),class: "btn btn-primary" %></h2>
					<table class="table">
						<thead>
							<tr>
								<th class="col-xs-2">画像</th>
								<th class="col-xs-3">材料名</th>
								<th class="col-xs-2">数量</th>
								<th class="col-xs-3">メーカー（任意）</th>
								<th colspan="2"></th>
							</tr>
						</thead>
						<tbody>
							<% @materials.each do |material| %>
							<tr>
								<td><%= attachment_image_tag material, :image, format: "jpeg" , fallback: "no_image.jpg", id: "material-image" %></td>
								<td><%= material.name %></td>
								<td><%= material.quantity %></td>
								<td><%= material.maker %></td>
								<td><%= link_to '編集' ,edit_recipe_material_path(@recipe.id, material) %></td>
								<td><%= link_to '削除', recipe_material_path(@recipe.id, material),method: :delete, data: {confirm: "削除してよろしいですか？"} %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
				<div class="row">
					<h2>レシピ手順</h2>
					<table class="table">
						<thead>
							<tr>
								<th class="col-xs-1"></th>
								<th class="col-xs-2">画像</th>
						        <th class="col-xs-7">手順説明</th>
						        <th></th>
						    </tr>
						</thead>
						<% @procedures.each.with_index(1) do |procedure, idx| %>
						<tbody>
							<tr>
								<td><%= idx %></td>
								<td><%= attachment_image_tag procedure, :image, format: "jpeg" , fallback: "no_image.jpg", id: "procedure-image" %></td>
								<td><%= procedure.explanation %></td>
								<td><%= link_to '編集' ,edit_recipe_procedure_path(@recipe.id, procedure) %></td>
								<td><%= link_to '削除', recipe_procedure_path(@recipe.id, procedure),method: :delete, data: {confirm: "削除してよろしいですか？"} %></td>
							</tr>
						</tbody>
					<% end %>
					</table>
					<!-- エラーメッセージ -->
					<% if @procedure.errors.any? %>
					    <div id="error_explanation" class="alert alert-danger">
					    	<ul>
						        <% @procedure.errors.full_messages.each do |message| %>
						            <li><%= message %></li>
						        <% end %>
					    	</ul>
					    </div>
					<% end %>
					<!-- エラーメッセージ -->
					<%= form_for [@recipe, @procedure] do |f| %>
					<table class="table">
						<tbody>
							<tr>
								<td class="col-xs-1">新規</td>
								<td class="col-xs-2"><%= attachment_image_tag @procedure, :image, :fill, 100, 80, format: "jpeg" , fallback: "no_image.jpg", size:'100x80', id: "file-preview"%>
									<%= f.attachment_field :image, class: "btn  item_attachment_field", id: "image_select"%>
									<label for="image_select" class="btn btn-primary item_attachment_field" style="display: block;">画像</label></td>
						        <td class="col-xs-7"><%= f.text_area :explanation, class: 'form-control' %></td>
						        <td colspan="2"><%= f.submit "手順を追加" ,class: "btn btn-primary" %></td>
							</tr>
						</tbody>
					</table>
					<% end %>
	            <div>
	            	<%= link_to '保存' ,recipe_path(@recipe) ,class: "btn btn-primary btn-lg" %>
	            </div>
			</div>
		</div>
	</div>
</div>
<!-- 画像選択した際に、選択した画像を表示させるjavascript -->
<script>
	document.getElementById('image_select').addEventListener('change', function (e) {
    // 1枚だけ表示する
    var file = e.target.files[0];

    // ファイルのブラウザ上でのURLを取得する
    var blobUrl = window.URL.createObjectURL(file);

    // img要素に表示
    var img = document.getElementById('file-preview');
    img.src = blobUrl;
});
</script>