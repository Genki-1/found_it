<div class="follow_btn">
	<% if user_signed_in? %>
		<% if current_user != user %>
			<% if current_user.following?(user) %>
			  <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete ,class: "btn btn-red"%>
			<% else %>
			  <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST ,class: "btn btn-blue"%>
			<% end %>
		<% end %>
	<% end %>
</div>