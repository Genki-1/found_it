<div class="conteiner">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<%= render 'user_profile', user: @user %>

			<div class="col-xs-5">
				<h2><%= @user.name %>の投稿レシピ</h2>
				<table>
				<% @recipes.each do |recipe| %>
					<tbody>
						<tr>
							<td>
								<%= link_to (recipe) do %>
								<%= attachment_image_tag recipe, :image, format: "jpeg" , fallback: "no_image.jpg" %><br>
								<% end %>
								<%= link_to recipe.title, recipe_path(recipe), class: "recipe_link" %>
								<%= recipe.if_is_closed %>
							</td>
						</tr>
					</tbody>
				<% end %>
				</table>
			</div>
		</div>
	</div>
</div>