<div class="col-xs-3">
	<h2>ユーザー情報</h2>
		<table class="table">
			<tbody>
				<tr>
					<td colspan="2"><%= attachment_image_tag user, :image, :fill, 100, 100, format: 'jpeg', class: "profile-thumb", fallback: "no_image.jpg", size:'100x100' %>
					</td>
				</tr>
				<tr>
					<th>ニックネーム</th>
					<td><%= user.name %></td>
				</tr>
				<tr>
					<th>自己紹介</th>
				</tr>
				<tr>
					<td colspan="2"><%= user.introduction %></td>
				</tr>
			</tbody>
		</table>
	<% if current_user != user %>
		<% if current_user.following?(user) %>
		  <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete ,class: "btn btn-primary btn-lg"%>
		<% else %>
		  <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST ,class: "btn btn-success btn-lg"%>
		<% end %>
	<% end %>
</div>
