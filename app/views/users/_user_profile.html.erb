<div class="col-xs-3">
	<h2>ユーザー情報</h2>
		<table class="table">
			<tbody>
				<tr>
					<td colspan="2"><%= attachment_image_tag user, :image, :fill,200,200, format: 'jpeg', class: "profile-thumb", fallback: "no_image.jpg", size:'200x200' %>
					</td>
				</tr>
				<tr>
					<th>ニックネーム</th>
					<td><%= link_to user_path(user) do %>
						<%= user.name %><% end %></td>
				</tr>
				<tr>
					<th>自己紹介</th>
				</tr>
				<tr>
					<td colspan="2"><%= user.introduction %></td>
				</tr>
			</tbody>
		</table>

		<% if current_page?(root_path) %>
			<div class="home_btn"><%= link_to "いいねしたレシピ一覧へ", favorite_user_path(user),class: "btn btn-blue btn-lg btn-block" %></div>
			<div class="home_btn"><%= link_to "ユーザのレシピ一覧へ", recipe_indedx_user_path(user),class: "btn btn-blue btn-lg btn-block" %></div>
		<% elsif current_page?(controller: 'users', action: 'recipes') %>
			<div class="home_btn"><%= link_to "いいねしたレシピ一覧へ", favorite_user_path(user),class: "btn btn-blue btn-lg btn-block" %></div>
		<% elsif current_page?(controller: 'favorites', action: 'favorite') %>
			<div class="home_btn"><%= link_to "ユーザのレシピ一覧へ", recipe_indedx_user_path(user),class: "btn btn-blue btn-lg btn-block" %></div>
		<% end %>


	<% if current_user != user %>
		<% if current_user.following?(user) %>
		  <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete ,class: "btn btn-blue btn-lg"%>
		<% else %>
		  <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST ,class: "btn btn-blue btn-lg"%>
		<% end %>
	<% end %>
</div>
