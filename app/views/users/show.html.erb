<div class="conteiner">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div class="col-xs-8">
				<h2>ユーザー情報
					<% if current_user != @user %>
						<% if current_user.following?(@user) %>
						  <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete ,class: "btn btn-primary btn-lg"%>
						<% else %>
						  <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST ,class: "btn btn-success btn-lg"%>
						<% end %>
					<% end %>
				</h2>
				<div class="col-xs-4">
					<div class="profile_image">
						<%= attachment_image_tag @user, :image, :fill, 200, 200, format: 'jpeg', class: "profile-thumb", fallback: "no_image.jpg", size:'200x200' %>
					</div>
					<div class="user_edit_btn">
						<% if current_user == @user %>
							<%= link_to "編集する", edit_user_path(@user),class: "btn btn-primary btn-lg" %>
						<% end %>
					</div>
				</div>
				<div class="col-xs-8">
					<table class="table user_show_table">
						<tbody>
							<tr>
								<th colspan="2">ニックネーム</th>
								<td colspan="2"><%= @user.name %></td>
							</tr>
							<tr>
								<th colspan="4">自己紹介</th>
							</tr>
							<tr>
								<td colspan="4"><%= @user.introduction %></td>
							</tr>
							<tr>
								<th>フォロー</th>
								<td><%= link_to @user.follower.count, user_follows_path(@user) %></td>
								<th>フォロワー</th>
								<td><%= link_to @user.followed.count, user_followers_path(@user) %></td>
							</tr>
							<tr>
								<th colspan="2">投稿したレシピ数</th>
								<td colspan="2"><%= @recipes.count %></td>
							</tr>
						</tbody>
					</table>
					<%= link_to "いいねしたレシピ一覧へ", favorite_user_path(@user),class: "btn btn-primary btn-lg" %>
				</div>
			</div>
			<div class="col-xs-4">
				<h2>
					<% if current_user != @user %>
						<%= @user.name %>の投降レシピ
					<% else %>
						あなたの投降レシピ
					<% end %>
				</h2>
				<table class="table">
				<% @recipes.first(4).each do |recipe| %>
					<tbody>
						<tr>
							<td>
								<%= link_to (recipe) do %>
								<%= attachment_image_tag recipe, :image, :fill, 200, 150,format: "jpeg" , fallback: "no_image.jpg", size:'200x150' %><br>
								<% end %>
								<%= link_to recipe.title, recipe_path(recipe), class: "recipe_link" %>
								<%= recipe.if_is_closed %>
							</td>
						</tr>
					</tbody>
				<% end %>
				</table>
				<%= link_to "ユーザのレシピ一覧へ", recipe_indedx_user_path(@user),class: "btn btn-primary btn-lg" %>
			</div>
		</div>
	</div>
</div>