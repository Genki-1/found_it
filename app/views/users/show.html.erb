<div class="conteiner">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div class="col-xs-6">
				<h2>ユーザー情報</h2>
				<% if current_user == @user %>
					<%= link_to "編集する", edit_user_path(@user),class: "btn btn-primary btn-lg" %>
				<% end %>
				<% if current_user != @user %>
					<% if current_user.following?(@user) %>
					  <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete ,class: "btn btn-primary btn-lg"%>
					<% else %>
					  <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST ,class: "btn btn-success btn-lg"%>
					<% end %>
				<% end %>
				<table>
					<tbody>
						<tr>
							<td><%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', class: "profile-thumb", fallback: "no_image.jpg" %>
							</td>
						</tr>
						<tr>
							<th>ニックネーム</th>
							<td><%= @user.name %></td>
						</tr>
						<tr>
							<th>自己紹介</th>
							<td><%= @user.introduction %></td>
						</tr>
						<tr>
							<th>フォロー</th>
							<td><%= link_to @user.follower.count, user_follows_path(@user) %></td>
						</tr>
						<tr>
							<th>フォロワー</th>
							<td><%= link_to @user.followed.count, user_followers_path(@user) %></td>
						</tr>
					</tbody>
				</table>
			</div>
			<div class="col-xs-6">
				<h2>ユーザー投稿レシピ</h2>
				<table>
				<% @recipes.first(4).each do |recipe| %>
					<tbody>
						<tr>
							<td>
								<%= link_to (recipe) do %>
								<%= attachment_image_tag recipe, :image, format: "jpeg" , fallback: "no_image.jpg" %><br>
								<% end %>
								<%= link_to recipe.title, recipe_path(recipe), class: "recipe_link" %>
								<%= recipe.if_is_closed %>
							</td>
						</tr>
					</tbody>
				<% end %>
				</table>
				<%= link_to "ユーザのレシピ一覧へ", recipe_indedx_user_path(@user),class: "btn btn-primary btn-lg" %>
			</div>
		</div>
	</div>
</div>