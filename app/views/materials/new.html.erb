<div class="conteiner">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div class="row">
				<h2><%= @recipe.title %>
					<%= link_to "タイトル・概要を変更する", edit_recipe_path(@recipe),class: "btn btn-primary btn-sm" %>
				</h2>
				<div class="col-xs-4">
					<%= attachment_image_tag @recipe, :image, :fill, 300, 200,format: "jpeg" , fallback: "no_image.jpg", size:'300x200' %>
				</div>
				<div class="col-xs-8">
					<h3><%= @recipe.outline %></h3>

					<h2>レシピ材料</h2>
					<table class="table">
						<thead>
							<tr>
								<th class="col-xs-2"></th>
								<th class="col-xs-3">材料名</th>
								<th class="col-xs-2">数量</th>
								<th class="col-xs-3">メーカー（任意）</th>
								<th colspan="2"></th>
							</tr>
						</thead>
						<tbody>
							<% @materials.each do |material| %>
							<tr>
								<td><%= attachment_image_tag material, :image, format: "jpeg" , fallback: "no_image.jpg", id: "material-image" %></td>
								<td><%= material.name %></td>
								<td><%= material.quantity %></td>
								<td><%= material.maker %></td>
								<td><%= link_to '編集' ,edit_recipe_material_path(@recipe.id, material) %></td>
								<td><%= link_to '削除', recipe_material_path(@recipe.id, material),method: :delete, data: {confirm: "削除してよろしいですか？"} %></td>
							</tr>
							<% end %>
							<!-- エラーメッセージ -->
							<% if @material.errors.any? %>
							    <div id="error_explanation" class="alert alert-danger">
							    	<ul>
								        <% @material.errors.full_messages.each do |message| %>
								            <li><%= message %></li>
								        <% end %>
							    	</ul>
							    </div>
							<% end %>
							<!-- エラーメッセージ -->
							<%= form_for [@recipe, @material] do |f| %>
							<tr>
						    	<td><%= attachment_image_tag @material, :image, :fill, 100, 80, format: "jpeg" , fallback: "no_image.jpg", size:'100x80', id: "file-preview"%>
								<%= f.attachment_field :image, class: "btn  item_attachment_field", id: "image_select"%>
								<label for="image_select" class="btn btn-primary item_attachment_field" style="display: block;">画像</label></td>
						        <td><%= f.text_field :name, class: 'form-control' %></td>
						        <td><%= f.text_field :quantity, class: 'form-control' %></td>
						        <td><%= f.text_field :maker, class: 'form-control' %></td>
						        <td colspan="2"><%= f.submit "材料を追加" ,class: "btn btn-primary" %></td>
						    </tr>
						    <% end %>
						</tbody>
					</table>
				</div>
				<div class="row">
					<h2>レシピ手順</h2>
					<table class="table">
						<% @procedures.each.with_index(1) do |procedure, idx| %>
						<tbody>
							<tr>
								<td><%= idx %></td>
								<td><%= attachment_image_tag procedure, :image, format: "jpeg" , fallback: "no_image.jpg", id: "procedure-image" %></td>
								<td><%= procedure.explanation %></td>
							</tr>
						</tbody>
						<% end %>
					</table>
					<div><%= link_to '手順の入力' ,new_recipe_procedure_path ,class: "btn btn-primary btn-lg" %>
					</div>
					<div><%= link_to '保存（後で編集できます）' ,recipe_path(@recipe) ,class: "btn btn-primary btn-lg" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- 画像選択した際に、選択した画像を表示させるjavascript -->
<script>
	document.getElementById('image_select').addEventListener('change', function (e) {
    // 1枚だけ表示する
    var file = e.target.files[0];

    // ファイルのブラウザ上でのURLを取得する
    var blobUrl = window.URL.createObjectURL(file);

    // img要素に表示
    var img = document.getElementById('file-preview');
    img.src = blobUrl;
});
</script>